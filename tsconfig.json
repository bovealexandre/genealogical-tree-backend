{
    "compilerOptions": {
        "outDir": "./build/",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "allowJs": true,
        "lib": [ "es2015", "dom"],
        "sourceMap": true,
        "skipLibCheck": true 
    },
    "exclude": [
        "node_modules"
    ]
}